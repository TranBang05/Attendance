@model AttendanceFe.Models.CourseRequest
@{
    ViewData["Title"] = "Create Course";
}

<h1>Create Course</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <select asp-for="SubjectId" class="form-control">
            <option value="">-- Select Subject --</option>
            @if (ViewBag.Subjects != null)
            {
                @foreach (var subject in ViewBag.Subjects)
                {
                    <option value="@subject.Value">@subject.Text</option>
                }
            }
            else
            {
                <option disabled>No subjects available</option>
            }
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudentIds"></label>
        <select asp-for="StudentIds" class="form-control" multiple="multiple">
            @foreach (var student in ViewBag.Students)
            {
                <option value="@student.Value">@student.Text</option>
            }
        </select>
        <span asp-validation-for="StudentIds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TimeSlot"></label>
        <input asp-for="TimeSlot" class="form-control" />
        <span asp-validation-for="TimeSlot" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeacherId"></label>
        <select asp-for="TeacherId" class="form-control">
            <option value="">-- Select Teacher --</option>
            @foreach (var teacher in ViewBag.Teachers)
            {
                <option value="@teacher.Value">@teacher.Text</option>
            }
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}
